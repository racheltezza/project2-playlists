<h2>{{playlist.name}}</h2>

<ul>
<li>{{playlist.genre}}</li>
<li>{{playlist.tempo}}</li>

</ul>
{{#each songs}}
<ul>
    
<li>{{name}}</li>
<li>{{artist}}</li>
</ul>

{{/each}}

<a href="/users/{{user._id}}/playlists/{{playlist._id}}/edit" class="badge badge-primary">Edit Playlist</a>

    <form action="/playlists/{{playlist._id}}?_method=DELETE" method="POST">
<input type="submit"  class="btn btn-danger" value="Delete Playlist">
</form>

<a href="/playlists/{{playlist._id}}/songs/new">Add New Song</a>