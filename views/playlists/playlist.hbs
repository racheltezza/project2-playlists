<form>
<input type="button" value="Add New Song To Playlist" onclick="window.location.href='/users/{{playlist.userId}}/playlists/{{playlist._id}}/songs/new'" class="btn btn-outline-primary"/>
</form>


    <form action="/users/{{playlist.userId}}/playlists/{{playlist._id}}?_method=DELETE" method="POST">
<input type="submit"  class="btn btn-danger btn-sm" value="Delete Playlist">
</form>


